<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_daily"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_daily_forecast_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_daily_forecast_today_cond_code_d"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:src="@mipmap/d99" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/iv_daily_forecast_today_cond_code_d"
            android:layout_toRightOf="@+id/iv_daily_forecast_today_cond_code_d"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_daily_forecast_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天"
                android:textColor="@color/primary_text_default"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_daily_forecast_today_cond_txt_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textColor="@color/secondary_text_default"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:layout_marginEnd="26dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_daily_forecast_today_tmp_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textColor="@color/primary_text_default"

                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tmp_unit_c"
                android:textColor="@color/primary_text_default"

                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="/"
                android:textColor="@color/primary_text_default"

                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_daily_forecast_today_tmp_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textColor="@color/primary_text_default"

                android:textSize="20sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tmp_unit_c"
                android:textColor="@color/primary_text_default"

                android:textSize="20sp" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:background="@color/holo_gray_light" />

    <RelativeLayout
        android:id="@+id/rl_daily_forecast_tomorrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_daily_forecast_tomorrow_cond_code_d"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:src="@mipmap/d99" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/iv_daily_forecast_tomorrow_cond_code_d"
            android:layout_toRightOf="@+id/iv_daily_forecast_tomorrow_cond_code_d"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_daily_forecast_tomorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明天"
                android:textColor="@color/primary_text_default"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_daily_forecast_tomorrow_cond_txt_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textColor="@color/secondary_text_default"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:layout_marginEnd="26dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_daily_forecast_tomorrow_tmp_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textColor="@color/primary_text_default"

                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tmp_unit_c"
                android:textColor="@color/primary_text_default"

                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="/"
                android:textColor="@color/primary_text_default"

                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_daily_forecast_tomorrow_tmp_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textColor="@color/primary_text_default"
                android:textSize="20sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tmp_unit_c"
                android:textColor="@color/primary_text_default"
                android:textSize="20sp" />

        </LinearLayout>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:background="@color/holo_gray_light" />

    <RelativeLayout
        android:id="@+id/rl_daily_forecast_after_tomorrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_daily_forecast_after_tomorrow_cond_code_d"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:src="@mipmap/d99" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/iv_daily_forecast_after_tomorrow_cond_code_d"
            android:layout_toRightOf="@+id/iv_daily_forecast_after_tomorrow_cond_code_d"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_daily_forecast_after_tomorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="后天"
                android:textColor="@color/primary_text_default"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_daily_forecast_after_tomorrow_cond_txt_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textColor="@color/secondary_text_default"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:layout_marginEnd="26dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_daily_forecast_after_tomorrow_tmp_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textColor="@color/primary_text_default"

                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tmp_unit_c"
                android:textColor="@color/primary_text_default"

                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="/"
                android:textColor="@color/primary_text_default"

                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_daily_forecast_after_tomorrow_tmp_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textColor="@color/primary_text_default"

                android:textSize="20sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tmp_unit_c"
                android:textColor="@color/primary_text_default"

                android:textSize="20sp" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/holo_gray_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_daily_forecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="open_daily_forecast"
            android:text="@string/daily_forecast"
            android:textColor="@color/primary_text_default" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/holo_gray_bright" />
</LinearLayout>