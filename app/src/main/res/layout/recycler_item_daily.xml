<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <!--date-->

    <TextView
        android:id="@+id/tv_daily_today"
        style="@style/DailyViewStyle"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp" />


    <View
        android:layout_width="450dp"
        android:layout_height="0.2dp"
        android:background="@color/holo_gray_light" />

    <!--code_d-->


    <ImageView
        android:id="@+id/iv_daily_today_cond_code_d"
        style="@style/DailyImageViewStyle"
        android:layout_marginTop="12dp" />


    <!--txt_d-->


    <TextView
        android:id="@+id/tv_daily_today_cond_txt_d"
        style="@style/DailyViewStyle"
        android:layout_marginBottom="12dp" />


    <!-- mChartView-->
    <!--<com.qingxu.imweather.view.CustomChartView-->
    <!--android:id="@+id/chartview"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="160dp" />-->

    <!--tmp_max-->
    <TextView
        android:id="@+id/tv_daily_today_tmp_max"
        style="@style/DailyViewStyle"
        android:layout_marginBottom="16dp" />

    <!--tmp_min-->
    <TextView
        android:id="@+id/tv_daily_today_tmp_min"
        style="@style/DailyViewStyle"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="16dp" />

    <!--wind_dir-->
    <TextView
        android:id="@+id/tv_daily_today_wind_dir"
        style="@style/DailyViewStyle"
        android:layout_marginBottom="12dp" />

    <!--wind_sc-->
    <TextView
        android:id="@+id/tv_daily_today_wind_sc"
        style="@style/DailyViewStyle" />

</LinearLayout>