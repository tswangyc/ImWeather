<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_aqi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_aqi_qlty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="空气质量"
            android:textColor="@color/primary_text_default" />

        <View
            android:id="@+id/view"
            android:layout_width="0.2dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_aqi_qlty_title"
            android:layout_alignTop="@+id/tv_aqi_qlty_title"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_toEndOf="@+id/tv_aqi_qlty_title"
            android:layout_toRightOf="@+id/tv_aqi_qlty_title"
            android:background="@color/dark_grey" />

        <TextView
            android:id="@+id/tv_aqi_qlty_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/view"
            android:layout_toRightOf="@+id/view" />

        <TextView
            android:id="@+id/tv_aqi_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/dark_grey"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.qingxu.imweather.view.CustomProgressBar
            android:id="@+id/customProgressbar_aqi"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="16dp" />

        <com.qingxu.imweather.view.CustomProgressBar
            android:id="@+id/customProgressbar_mp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="16dp" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="数值单位：μg/m3(CO为mg/m3)"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PM2.5" />

        <TextView
            android:id="@+id/tv_aqi_pm25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/primary_text_default" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PM10" />

        <TextView
            android:id="@+id/tv_aqi_pm10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/primary_text_default" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NO2" />

        <TextView
            android:id="@+id/tv_aqi_no2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/primary_text_default" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SO2" />

        <TextView
            android:id="@+id/tv_aqi_so2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/primary_text_default" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CO" />

        <TextView
            android:id="@+id/tv_aqi_co"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/primary_text_default" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="O3" />

        <TextView
            android:id="@+id/tv_aqi_o3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/primary_text_default" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_aqi_suggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:text="@string/default_value"
        android:textColor="@color/primary_text_default" />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/holo_gray_bright" />
</LinearLayout>